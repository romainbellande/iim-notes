{% stylesheets
'css/bootstrap.min.css'
'css/main.css'
filter='cssrewrite' output='css/compiled/app.css' %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
<div class="width-300 center-block" style="margin-top: 12%">
  <form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label class="text-primary" for="username">{{ 'Username'|trans }}</label>
    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label class="text-primary" for="password">{{ 'Password'|trans }}</label>
    <input class="form-control" type="password" id="password" name="_password" required="required" />

    <div class="checkbox">

      <label class="text-primary" for="remember_me">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        {{ 'Remember me'|trans }}
      </label>
    </div>

    <input class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'login'|trans }}" />
  </form>
</div>

{% javascripts
'js/jquery.min.js'
'js/bootstrap.min.js'
'js/main.js'
output='js/compiled/app.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}

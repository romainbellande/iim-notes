  <h1 class="text-center ">Add a grade</h1>
  {{ form_start(form) }}

    {{ form_widget(form.student, { 'attr' : { 'class' : 'form-control' } }) }}
    {{ form_widget(form.exam, { 'attr' : { 'class' : 'form-control margin-top-5' } }) }}
